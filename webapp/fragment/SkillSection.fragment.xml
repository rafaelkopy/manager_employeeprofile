<mvc:View 
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  height="100%"
  xmlns:mvc="sap.ui.core.mvc"
  >

		<f:GridList
			id="gridListId"
			headerText="{i18n>GridListHeader}"
			items="{ path : '/EmployeeSkillManager'

      }" 
      width="auto"       
      >
			<f:GridListItem id="gridListItemId">
				<VBox id="vboxId" 
              class="sapUiResponsiveMargin"
              width="auto"
                >
					<layoutData>
						<FlexItemData id="flexItemDataId"
                          growFactor="1"
                          shrinkFactor="0"                        
                        /> 
					</layoutData>

					    <Title id="titleId"
                               text="{Skillname}"
                               wrapping="true"
                        />      
                            <RatingIndicator id="ratingId"
                                             value="{Rating}"
                                             maxValue="10"
                                             visualMode="Half"
					                                   iconSize="16px"
                                             editable="{= ${ui>/editMode} === 'Display' ? false : true }"
                            >
				                    </RatingIndicator>           
				</VBox>
			</f:GridListItem>
		</f:GridList>
</mvc:View>